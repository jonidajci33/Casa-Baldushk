<odoo>
  <template id="report_invoice_thermal_html">
  <t t-call="web.html_container">
    <t t-foreach="docs" t-as="o">
      <body onload="window.print();" style="width: 58mm; font-size: 10px;">
        <p><strong><t t-esc="o.name"/></strong></p>
        <p>Date: <t t-esc="o.invoice_date"/></p>
        <p>Customer: <t t-esc="o.partner_id.name"/></p>
        <hr/>
        <t t-foreach="o.invoice_line_ids" t-as="line">
          <p><t t-esc="line.name"/> - <t t-esc="line.quantity"/> Ã— <t t-esc="line.price_unit"/></p>
        </t>
        <hr/>
        <p><strong>Total: <t t-esc="o.amount_total"/></strong></p>
        <p>Thank you!</p>
      </body>
    </t>
  </t>
</template>

</odoo>
