                    <field name="profisc_nga_furnitore_vendas_20" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_nga_furnitore_vendas_10_takse" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_nga_furnitore_vendas_10" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_nga_furnitore_vendas_6_takse" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
