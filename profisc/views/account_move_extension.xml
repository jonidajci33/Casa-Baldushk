                    <field name="profisc_sale_bad_debt" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('in_invoice', 'in_refund', 'in_receipt')"/>
                    <field name="profisc_sale_bad_debt_vat" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('in_invoice', 'in_refund', 'in_receipt')"/>
                    <field name="profisc_sale_vat0_margin_scheme" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('in_invoice', 'in_refund', 'in_receipt')"/>
                    <field name="profisc_sale_vat0_margin_scheme_tvsh" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('in_invoice', 'in_refund', 'in_receipt')"/>
                    <!--Purchase Tax Fields-->
                    <field name="profisc_te_perjashtuara" sum="Total" optional="hide" on_change="1"
                           column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_investime" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_te_perjashtuara_te_investimit" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_import" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_import_20_takse" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_import_20" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
