                    <field name="profisc_autongarkese" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_regullime_takse" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="profisc_regullime" sum="Total" optional="hide" on_change="1" column_invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')"/>
