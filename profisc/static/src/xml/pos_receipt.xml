<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Extend OrderReceipt -->
    <t t-name="pos_receipt_header_inherit"
       t-inherit="point_of_sale.OrderReceipt"
       t-inherit-mode="extension">

        <xpath expr="//div[@class='after-footer']" position="inside">
            <t t-if="props.data.profisc_iic">
                <div style="text-align:center;" class="profisc_fields" >
                    <div>------------------------</div>
                    <t t-if="props.data.profisc_ubl_id">
                        <div>
                            Numri i fatures:
                            <t t-esc="props.data.profisc_ubl_id"/>
                        </div>
                    </t>
                    <div>
                        NSLF:
                        <t t-esc="props.data.profisc_iic"/>
                    </div>
                    <t t-if="props.data.profisc_fic">
                        <div>
                            NIVF:
                            <t t-esc="props.data.profisc_fic"/>
                        </div>
                    </t>
                    <t t-if="props.data.profisc_eic">
                        <div>
                            Eic:
                            <t t-esc="props.data.profisc_eic"/>
                        </div>
                    </t>
                    <div id="qrcode">
                        <img style="width:200px;height:200px"
                             class="profisc_qr_code"
                             t-att-src="props.data.qrCode"
                             alt="qr_code"/>
                    </div>
                    <div>
                         Gjeneruar nga: ProFisc by Prisma
                    </div>
                </div>
            </t>
        </xpath>
    </t>

    <!-- Extend ReceiptHeader -->
    <t t-name="profisc.ReceiptHeader"
       t-inherit="point_of_sale.ReceiptHeader"
       t-inherit-mode="extension">

        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="replace">
            <t t-if="props.data.company">
                <div>--------------------------------</div>
                <t t-if="props.data.company.name">
                    <div>
                        <t t-esc="props.data.company.name"/>
                    </div>
                </t>
                <t t-if="props.data.company.vat">
                    <div>NUIS:
                        <t t-esc="props.data.company.vat"/>
                    </div>
                </t>
                <t t-if="props.data.company.street or props.data.company.city">
                    <div>Adresa:
                        <t t-esc="props.data.company.street"/> <t t-esc="props.data.company.city"/>
                    </div>
                </t>
            </t>
        </xpath>
    </t>

</templates>
